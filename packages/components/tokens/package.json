{
    "name": "@formas/tokens",
    "version": "1.0.0",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "peerDependencies": {
        "atomico": "*"
    },
    "scripts": {
        "build:types": "tsc",
        "build:compile": "library src/**/* --all-external",
        "build:exports": "exports lib/**/* types/**/* --wrappers",
        "dev:exports": "exports src/**/* --watch",
        "build": "npm run build:types && npm run build:compile && npm run build:exports",
        "prepublishOnly": "npm run build"
    },
    "postcss": {
        "plugins": {
            "@atomico/postcss-tokens": {
                "defaultValue": "true"
            }
        }
    },
    "types": "src/index.tsx",
    "exports": {
        ".": "./src/index.tsx"
    },
    "typesVersions": {
        "*": {}
    }
}
