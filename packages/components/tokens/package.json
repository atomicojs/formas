{
    "name": "@formas/tokens",
    "version": "0.0.2",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "peerDependencies": {
        "atomico": "*"
    },
    "scripts": {
        "build:types": "tsc",
        "build:compile": "library \"src/**/*\" --all-external",
        "build:exports": "exports \"lib/**/*\" \"types/**/*\" --wrappers",
        "dev:exports": "exports src/**/* --watch"
    },
    "postcss": {
        "plugins": {
            "@atomico/postcss-tokens": {
                "defaultValue": "true",
                "prefix": "formas"
            }
        }
    },
    "types": "src/index.tsx",
    "exports": {
        ".": "./src/index.tsx"
    },
    "typesVersions": {
        "*": {}
    }
}
