{
    "name": "@formas/button",
    "version": "0.0.4",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "peerDependencies": {
        "atomico": "*",
        "@atomico/react": "*",
        "@atomico/vue": "*"
    },
    "scripts": {
        "build:types": "tsc",
        "build:compile": "library \"src/**/*\" --all-external",
        "build:exports": "exports \"lib/**/*\" \"types/**/*\" --wrappers",
        "dev:exports": "exports \"src/**/*\" --watch"
    },
    "peerDependenciesMeta": {
        "@atomico/react": {
            "optional": true
        },
        "@atomico/vue": {
            "optional": true
        }
    },
    "exports": {
        "./button-active": {
            "types": "./src/button-active.tsx",
            "default": "./src/button-active.tsx"
        },
        "./button": {
            "types": "./src/button.tsx",
            "default": "./src/button.tsx"
        },
        ".": {
            "types": "./src/index.tsx",
            "default": "./src/index.tsx"
        },
        "./tsconfig.json": {
            "default": "./src/stories/tsconfig.json"
        }
    },
    "typesVersions": {
        "*": {
            "button-active": [
                "src/button-active.tsx"
            ],
            "button": [
                "src/button.tsx"
            ]
        }
    },
    "types": "src/index.tsx"
}