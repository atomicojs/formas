{
    "name": "@formas/button",
    "version": "1.0.0",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "peerDependencies": {
        "atomico": "*"
    },
    "scripts": {
        "build:types": "tsc",
        "build:compile": "library src/**/*",
        "build:exports": "exports lib/**/* types/**/* --wrappers",
        "dev:exports": "exports src/**/* --watch",
        "build": "npm run build:types && npm run build:compile && npm run build:exports",
        "prepublishOnly": "npm run build"
    },
    "types": "src/index.tsx",
    "exports": {
        "./button-active": "./src/button-active.tsx",
        "./button": "./src/button.tsx",
        ".": "./src/index.tsx",
        "./stories/index.stories": "./src/stories/index.stories.tsx"
    },
    "typesVersions": {
        "*": {
            "button-active": [
                "src/button-active.tsx"
            ],
            "button": [
                "src/button.tsx"
            ],
            "stories/index.stories": [
                "src/stories/index.stories.tsx"
            ]
        }
    }
}
