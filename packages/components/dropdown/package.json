{
    "name": "@formas/dropdown",
    "version": "0.0.2",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@floating-ui/dom": "latest"
    },
    "peerDependencies": {
        "atomico": "*"
    },
    "scripts": {
        "build:types": "tsc",
        "build:compile": "library \"src/**/*\" --all-external",
        "build:exports": "exports \"lib/**/*\" \"types/**/*\" --wrappers",
        "dev:exports": "exports src/**/* --watch"
    },
    "types": "src/index.tsx",
    "exports": {
        "./element": "./src/element.tsx",
        ".": "./src/index.tsx",
        "./layout": "./src/layout.tsx",
        "./stories/index.stories": "./src/stories/index.stories.tsx"
    },
    "typesVersions": {
        "*": {
            "element": [
                "src/element.tsx"
            ],
            "layout": [
                "src/layout.tsx"
            ],
            "stories/index.stories": [
                "src/stories/index.stories.tsx"
            ]
        }
    }
}
